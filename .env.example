# ===================================
# Server Configuration
# ===================================
PORT=3006
NODE_ENV=development

# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_USER=root
DB_PASS=your_db_password
DB_NAME=custom_dining_db
DB_DIALECT=mysql

# ===================================
# JWT Configuration
# ===================================
JWT_SECRET=your_jwt_super_secret_key_change_in_production
JWT_EXPIRATION=24h
JWT_COOKIE_EXPIRE=30

# ===================================
# Email Configuration
# ===================================
# SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM='Custom Dining <noreply@customdining.com>'

# Email Templates
EMAIL_CONFIRMATION_TEMPLATE=email-confirmation
PASSWORD_RESET_TEMPLATE=password-reset
RESTAURANT_APPROVAL_TEMPLATE=restaurant-approval

# ===================================
# Frontend URLs
# ===================================
FRONTEND_URL=http://localhost:3000
ADMIN_PANEL_URL=http://localhost:3000/admin

# ===================================
# Security
# ===================================
# Set to 'none' in development, 'lax' or 'strict' in production
COOKIE_SECURE=none
COOKIE_HTTP_ONLY=true

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs

# ===================================
# CORS
# ===================================
CORS_ORIGIN=http://localhost:3000

# ===================================
# File Upload
# ===================================
MAX_FILE_UPLOAD=5  # MB
FILE_UPLOAD_PATH=./public/uploads

# ===================================
# Logging
# ===================================
LOG_LEVEL=debug  # error, warn, info, debug